type Word {
  id: ID!
  word: String!
  language: String!
  exampleUsage: String!
}

type Translation {
  wordID: ID!
  translationID: ID!
}

type Query {
  getPolishWords(englishWord: String!): [Word!]!
  getEnglishWords(polishWord: String!): [Word!]!
}

type Mutation {
  addTranslation(englishWord: String!, polishWord: String!): Translation!
  addWord(word: String!, Language: String!, exampleUsage: String!): Word!
}